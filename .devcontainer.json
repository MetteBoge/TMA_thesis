{
  "name": "R Dev Container",
  "image": "rocker/verse:4.2.1",
  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "REditorSupport.r"
      ]
    }
  },
  "postCreateCommand": "mkdir -p /var/lib/docker/codespacemount/.persistedshare && R -e 'install.packages(c(\"tidyverse\", \"R.utils\"))'"
}

